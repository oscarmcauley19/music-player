<Page x:Class="ProjectDesign.SignUpConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectDesign"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SignUpConfirmationPage">

    <Grid Background="#FF1B1B1B">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe UI Light"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
        </Grid.Resources>
        
        <StackPanel Height="100">
            <TextBlock TextWrapping="Wrap" Text="Thank you for signing up." FontFamily="Segoe UI Light" Foreground="White" FontSize="25" Margin="20, 10"/>
            <StackPanel Orientation="Horizontal" Margin="20, 0, 0, 0">
                <TextBlock Text="Click "/>
                <TextBlock Text="here" PreviewMouseDown="Return_PreviewMouseDown" TextDecorations="Underline" />
                <TextBlock Text=" to return to log in" />
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
